a
 text-decoration none

h1
  font-size 2em
  font-family: 'Yanone Kaffeesatz' sans-serif
  padding 20px 0 0 0

h2 a
  color verde
  font-size .7em
  font-family: 'Yanone Kaffeesatz' sans-serif

h5
  color blanco_bg
  font-size .8em

h6
  color blanco_bg
  font-size .6em

header
  background-image url(../images/splikbg.jpg)
  padding auto

footer
 background-color gris_footer
 padding 40px 0 30px
 color white
 font-size 16px
 line-height 28px
 padding 30px 0
 text-align center
 -moz-box-sizing border-box
 -webkit-box-sizing border-box
 box-sizing: border-box

footer p
 color #fff

.imagencont
  border-radius 50%
  width 15%
  height 15%

.imagencont1
  border-radius 50%
  width 40%
  height 40%
  position relative

.feedback, .legals, .legals1
  font-family: 'Yanone Kaffeesatz' sans-serif

.intext
  line-height .1px

.intext1
 font-family: 'Yanone Kaffeesatz' sans-serif

.splik_icon-twitter
  color azul_tt
  postion absolute

.splik_icon-facebook
  color azul_fb
  postion absolute

.splik_icon-google
  color gris_claro
  postion absolute

.splik_icon-youtube4
  color rojo
  posiyion absolute

ul.legals, ul.social, ul.legals1
  list-style none

ul.legals li, ul.social li, ul.legals1 li
  display inline-block

ul.legals li::after
  content " |"

ul.legals li:last-child::after
  content ""

ul.legals1 li::after
  content " |"
  color gris_oscuro

ul.legals1 li:last-child::after
  content ""

ul.legals
  color blanco_bg
  text-align center

ul.social
  font-size 30px
  text-align center

.legals a
  color blanco_bg
  ::hover
    color verde

.legals1
  font-size 20px
  text-align right
  padding 20px 0 0 0

.logo_splik
  font-size 50px

ul li, .legals, .social
  color blanco_bg
  opacity 80%

.logo2
  font-size 60px

.navbar
  background #fff
  box-shadow 0 1px 1px rgba(196, 194, 202, 0.23)
  vertical-align inline-block

.button
  background verde
  border-bottom 5px solid amarillo_claro

@media screen and (max-width:960px)
  .legals1
    font-size .5em

@media screen and (max-width:480px)
  .legals1
    vertical-align top
    position relative
    z-index 0
    padding 0
    margin 0
    overflow hidden
    float left

  .random, .intext1
    text-align center
