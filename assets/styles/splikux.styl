
amarillo = #FBBD35
amarillo_claro = #EFC68A
azul_fb  = #39579E
azul_tt  = #5FA9DD
blanco_bg = #FFFFFF
crema    = #F5E5D6
gris_claro = #818181
gris_oscuro = #333333
gris_mas_claro = #F0F0F0
